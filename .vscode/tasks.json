{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Install Dependencies",
			"type": "shell",
			"command": "npm install"
		},
		{
			"label": "Build",
			"type": "shell",
			"command": "npm run tauri build",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Generate App Icon",
			"type": "shell",
			"command": "npm run tauri icon src/static/icon.png"
		}
	]
}
