{
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devPath": "http://localhost:5500",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "PeepoChat",
    "version": "0.0.1"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "dev.danmizu",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "PeepoChat",
        "width": 1920,
        "height": 1080,
        "fullscreen": false,
        "resizable": true,
        "maximized": true,
        "titleBarStyle": "Transparent"
      }
    ]
  }
}
